
<div id="boxscore" class="tab_content">
	<div class="team_labels">
		<div class="visitor_label"><%= @bs.cities[0] %></div>
		<div class="home_label"><%= @bs.cities[1] %></div>
	</div>
	<div id="batting">
		<% (0..1).each do |index| %>
			<% if index == 0 %>
				<div id="away_batters">
			<% else %>
				<div id="home_batters">
			<% end %>
				<table>
					<tr class="header_row">
						<td class="name_field">Name</td>
						<td class="data_field">AB</td>
						<td class="data_field">H</td>
						<td class="data_field">R</td>
						<td class="data_field">RBI</td>
						<td class="data_field">AVG</td>
					</tr>
				<% @bs.batters[index].each do |batter| %>
					<tr class="batter_row">
						<td class="name_field"><%= batter.batter_name %></td>
						<td><%= batter.ab %></td>
						<td><%= batter.h %></td>
						<td><%= batter.r %></td>
						<td><%= batter.rbi %></td>
						<td><%= batter.avg %></td>
					</tr>
				<% end %>
				</table>
				<br/>
				<% if index == 0 %>
					<%= @bs.away_batting_text %>
				<% else %>
					<%= @bs.home_batting_text %>
				<% end %>
			</div>
		<% end %>
	</div>
	<div class="team_labels">
		<div class="visitor_label"><%= @bs.cities[0] %></div>
		<div class="home_label"><%= @bs.cities[1] %></div>
	</div>
	<div id="pitching">
		<% (0..1).each do |index| %>
			<% if index == 0 %>
				<div id="away_pitchers">
			<% else %>
				<div id="home_pitchers">
			<% end %>
				<table>
					<tr class="header_row">
						<td class="name_field">Name</td>
						<td class="data_field">IP</td>
						<td class="data_field">ER</td>
						<td class="data_field">R</td>
						<td class="data_field">H</td>
						<td class="data_field">HR</td>
						<td class="data_field">SO</td>
						<td class="data_field">BB</td>
						<td class="data_field">ERA</td>
						<td class="note_field">&nbsp;NOTE</td>
					</tr>
				<% @bs.pitchers[index].each do |pitcher| %>
					<tr class="pitcher_row">
						<td class="name_field"><%= pitcher.pitcher_name %></td>
						<td><%= pitcher.inn %></td>
						<td><%= pitcher.er %></td>
						<td><%= pitcher.r %></td>
						<td><%= pitcher.h %></td>
						<td><%= pitcher.hr %></td>
						<td><%= pitcher.so %></td>
						<td><%= pitcher.bb %></td>
						<td><%= pitcher.era %></td>
						<td class="note_field">&nbsp;<%= pitcher.note %></td>
					</tr>
				<% end %>
				</table>
			</div>
		<% end %>
	</div>
	
	
	<div id="game_info">
		<%= @bs.game_info %>
	</div>
	<div style="clear:both;"></div>
</div>