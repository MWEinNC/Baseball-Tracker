<%= stylesheet_link_tag 'boxscore' %>

<div id="title">	
	Boxscore for <%= @gameday_info['year'] %>/<%= @gameday_info['month'] %>/<%= @gameday_info['day'] %><br/>
	<%= @cities[0] %> vs. <%= @cities[1] %><br/>
</div>

<div id="game_menu">
	Game Menu
</div>

<div class="tabs">
	<a class="tab selected" href="boxscore?gid=2009_10_01_minmlb_detmlb_1"><span>Boxscore</span></a>
	<a class="tab" href="/playbyplay?gid=2009_10_01_minmlb_detmlb_1"><span>Play-by-Play</span></a>
	<a class="tab" href="/pitchbypitch?gid=2009_10_01_minmlb_detmlb_1"><span>Pitch-by-Pitch</span></a> 
	<a class="tab" href="/highlights?gid=2009_10_01_minmlb_detmlb_1"><span>Highlights</span></a>
</div>




<div id="game_detail">
<div id="boxscore" class="tab_content">
	<div id="linescore">
		<table id="linescore_table" cellspacing="0px">
			<tr class="linescore_header">
				<td class="linescore_city">Team</td>
				<% (0..8).each do |num| %>
					<td><%= (num + 1).to_s %></td>
				<% end %>
				<td>R</td>
				<td>H</td>
				<td>E</td>
			</tr>
			<tr>
	      		<td class="linescore_city"><%= @cities[0] %></td>
		  		<% (0..8).each do |num| %>
		  			<td class="linescore_inning"><%= @innings[num][0] %></td>
		  		<% end %>
	      		<td class="linescore_totals"><%= @tots[0][0] %></td>
				<td class="linescore_totals"><%= @tots[0][1] %></td>
				<td class="linescore_totals"><%= @tots[0][2] %></td>
			</tr>
			<tr>
		   		<td class="linescore_city"><%= @cities[1] %></td>           
		  		<% (0..8).each do |num| %>
		  			<td class="linescore_inning"><%= @innings[num][1] %></td>
		  		<% end %>
	      		<td class="linescore_totals"><%= @tots[1][0] %></td>
				<td class="linescore_totals"><%= @tots[1][1] %></td>
				<td class="linescore_totals"><%= @tots[1][2] %></td>
			</tr>
		</table>
	</div>

	<div class="team_labels">
		<div class="visitor_label"><%= @cities[0] %></div>
		<div class="home_label"><%= @cities[1] %></div>
	</div>
	<div id="batting">
		<% (['away_batters','home_batters']).each do |batters| %>
			<div id="<%= batters %>">
				<table>
					<tr class="header_row">
						<td class="name_field">Name</td>
						<td class="data_field">AB</td>
						<td class="data_field">H</td>
						<td class="data_field">R</td>
						<td class="data_field">RBI</td>
						<td class="data_field">AVG</td>
					</tr>
				<% (eval '@' + batters).each do |batter| %>
					<tr class="batter_row">
						<td class="name_field"><%= batter.batter_name %></td>
						<td><%= batter.ab %></td>
						<td><%= batter.h %></td>
						<td><%= batter.r %></td>
						<td><%= batter.rbi %></td>
						<td><%= batter.avg %></td>
					</tr>
				<% end %>
				</table>
				<br/>
				<%= eval('@' + batters + '_text') %>
			</div>
		<% end %>
	</div>
	<div class="team_labels">
		<div class="visitor_label"><%= @cities[0] %></div>
		<div class="home_label"><%= @cities[1] %></div>
	</div>
	<div id="pitching">
		<% (['away_pitchers','home_pitchers']).each do |pitchers| %>
			<div id="<%= pitchers %>">
				<table>
					<tr class="header_row">
						<td class="name_field">Name</td>
						<td class="data_field">IP</td>
						<td class="data_field">ER</td>
						<td class="data_field">R</td>
						<td class="data_field">H</td>
						<td class="data_field">HR</td>
						<td class="data_field">SO</td>
						<td class="data_field">BB</td>
						<td class="data_field">ERA</td>
						<td class="note_field">&nbsp;NOTE</td>
					</tr>
				<% (eval '@' + pitchers).each do |pitcher| %>
					<tr class="pitcher_row">
						<td class="name_field"><%= pitcher.pitcher_name %></td>
						<td><%= pitcher.inn %></td>
						<td><%= pitcher.er %></td>
						<td><%= pitcher.r %></td>
						<td><%= pitcher.h %></td>
						<td><%= pitcher.hr %></td>
						<td><%= pitcher.so %></td>
						<td><%= pitcher.bb %></td>
						<td><%= pitcher.era %></td>
						<td class="note_field">&nbsp;<%= pitcher.note %></td>
					</tr>
				<% end %>
				</table>
			</div>
		<% end %>
	</div>


	<div id="game_info">
		<%= @game_info %>
	</div>
	<div style="clear:both;"></div>
</div>
</div>
